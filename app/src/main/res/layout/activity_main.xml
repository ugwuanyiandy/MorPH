<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bg">

    <TextView android:text="MorPH" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/entrance1"
        android:layout_below="@+id/imageView"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/main"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/entrance1"
        android:layout_alignStart="@+id/entrance1"
        android:layout_alignRight="@+id/entrance1"
        android:layout_alignEnd="@+id/entrance1"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Begin"
        android:id="@+id/button"
        android:background="@drawable/button_bg"
        android:visibility="invisible"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/entrance1"
        android:layout_alignStart="@+id/entrance1"
        android:layout_marginTop="69dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/entrance1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write"
            android:id="@+id/entrance2"
            android:layout_alignTop="@+id/entrance3"
            android:layout_toRightOf="@+id/entrance1"
            android:layout_toEndOf="@+id/entrance1"
            android:visibility="invisible"
            android:textColor="#fff"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen"
            android:id="@+id/entrance3"
            android:visibility="invisible"
            android:textColor="#fff"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignBottom="@+id/entrance2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:id="@+id/entrance4"
            android:layout_alignTop="@+id/entrance3"
            android:layout_toRightOf="@+id/entrance1"
            android:layout_toEndOf="@+id/entrance1"
            android:visibility="invisible"
            android:textColor="#fff"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="10dp" />
    </LinearLayout>

</RelativeLayout>
